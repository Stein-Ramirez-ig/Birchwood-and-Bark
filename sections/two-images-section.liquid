

<div class="two-images-section {{ settings.classes }}">
  <h2>{{ settings.heading }}</h2>
  <div class="image-row">
    <img src="{{ section.settings.image1 | image_url:width:500 | image_tag: loading:'lazy' }}" alt="Image 1">
    <img src="{{ section.settings.image2 | image_url:widht:500 | image_tag: loading:'lazy' }} " alt="Image 2">
  </div>
  <h2>{{ settings.heading2 }}</h2>
  <p>{{ settings.paragraph }}</p>
</div>

{% schema %}
  {
  "name": "two-images-section",
  
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "heading2",
      "label": "Heading 2"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph"
    },
    {
      "type": "text",
      "id": "classes",
      "label": "Additional classes (optional)"
    }
  ],"presets": [
    {
      "name": "Section with heading two images and rich text",
      "settings": {}
    }
  ]
}
		
{% endschema %}