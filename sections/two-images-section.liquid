{{ 'base.css' | asset_url | stylesheet_tag }}


<section class="two-images-section">
  <div class="section-{{ section.id }}-padding">
  <h1>{{ section.settings.header }}</h1>
  <div class="images">
    {{ section.settings.image_one | image_url: width:100 | image_tag: alt:section.settings.image_one.label}}
    {{ section.settings.image_one | image_url: width:100 | image_tag: alt:section.settings.image_one.label}}
  </div>
  <h2>{{ section.settings.header2 }}</h2>
  <p>{{ section.settings.paragraph }}</p>
  {% if section.settings.show_button %}
    <button>{{ section.settings.cta_button }}</button>
  {% endif %}

  </div>
</section>

{% schema %}
{
  "name": "two-images-section",
  "class":"section",
  "settings": [
    {
      "type": "richtext",
      "id":"header",
      "label": "Your Heading Here"
    },
    {
      "type": "image_picker",
      "id": "image_one",
      "label": "First Image"
    },
    {
      "type": "image_picker",
      "id": "image_two",
      "label": "Second Image"
    },
    {
      "type": "richtext",
      "id":"header2",
      "label": "Another Heading Here"
    },
    {
      "type": "text",
      "id": "paragraph",
      "label": "Paragraph Text",
      "default": "Your paragraph text here."
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show Button",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_button",
      "label": "Button Text",
      "default": "Click Me"
    },
       {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
    "presets": [
    {
      "name": "Two images section"
    }
  ]
}

{% endschema %}