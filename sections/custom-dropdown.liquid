{% style %}
  
.tab-header-caller {
    background-color: #ffffff; /* Change background color */
    color: #000000; /* Change text color */
    font-family: Arial, sans-serif; /* Change text style */
}

.caller-drop-down {
    padding-left: 25%;
    padding-right: 25%;
}

.caller-drop-down p {
    color: #333; /* Text color */
    font-size: 16px; /* Change font size */
}

{% endstyle %}

<section>
<div class="tab-header-caller" style="min-height: 250px; background-color: {{ section.settings.header_bg_color }}; color: {{ section.settings.text_color }}; cursor: pointer;" onclick="toggleDropdown(this)">
    <div style="font-family: {{ section.settings.text_font.family }}; text-align: {{ section.settings.header_text_alignment }};">{{ section.settings.header }}</div>
</div>
  {% comment %} dropdown content {% endcomment %}
  
<div class="caller-drop-down" style="display: none; text-align: {{ section.settings.dropdown_text_alignment }}; padding-left: 25%; padding-right: 25%; background-color: {{ section.settings.content_bg_color }};">
   {% if 'display:block' %} 
  <hr style="width: 75%; height: 2px; background-color: #000000; border: none; margin-bottom: 400px;">
  <p style="color: {{ section.settings.text_color }};">{{ section.settings.dropdown_content }}</p>
  <hr style="width: 75%; height: 2px; background-color: #000000; border: none; margin-bottom: 400px;">
     {% endif %}
</div>

<script>
function toggleDropdown(element) {
    var dropdown = element.nextElementSibling;
    if (dropdown.style.display === 'none' || dropdown.style.display === '') {
        dropdown.style.display = 'block';
    } else {
        dropdown.style.display = 'none';
    }
}
</script>
</section>

{% schema %}
{
  "name": "Custom Dropdown",
  "class": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "header",
      "label": "Header Text"
    },
    {
      "type": "richtext",
      "id": "dropdown_content",
      "label": "Dropdown Content"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "content_bg_color",
      "label": "Content Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "select",
      "id": "header_text_alignment",
      "label": "Header Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "dropdown_text_alignment",
      "label": "Dropdown Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Custom Dropdown"
    }
  ]
}
{% endschema %}