{% style %}
  
.tab-header-caller {
    background-color: #ffffff; /* Change background color */
    color: #000000; /* Change text color */
    font-family: Arial, sans-serif; /* Change text style */
}

.caller-drop-down {
    padding-left: 25%;
    padding-right: 25%;
    text-align: center;
}

.caller-drop-down p {
    color: #333; /* Text color */
    font-size: 16px; /* Change font size */
}

{% endstyle %}

<section>
<div class="tab-header-caller" style="min-height: 250px; background-color: {{ section.settings.header_bg_color }}; color: {{ section.settings.text_color }}; cursor: pointer;" onclick="toggleDropdown(this)">
    <h2 style="font-family: {{ section.settings.text_font.family }}">{{ section.settings.header_text }}</h2>
</div>
<div class="caller-drop-down" style="display: none; text-align: center; padding-left: 25%; padding-right: 25%; background-color: {{ settings.content_bg_color }};">
    <p style="color: {{ section.settings.text_color }};">{{ section.settings.dropdown_content }}</p>
</div>

<script>
function toggleDropdown(element) {
    var dropdown = element.nextElementSibling;
    if (dropdown.style.display === 'none' || dropdown.style.display === '') {
        dropdown.style.display = 'block';
    } else {
        dropdown.style.display = 'none';
    }
}
</script>
</section>
{% schema %}
{
  "name": "Custom Dropdown",
  "class":"section",
  "settings": [
    {
      "type": "richtext",
      "id": "header",
      "label": "Header Text"
    },
    {
      "type": "textarea",
      "id": "dropdown_content",
      "label": "Dropdown Content",
      "default": "This is where you can add information, icons, and modify text styles."
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "content_bg_color",
      "label": "Content Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    }
  ],
  "presets": [
    {
      "name": "Custom Dropdown",
    }
  ]
}
{% endschema %}
