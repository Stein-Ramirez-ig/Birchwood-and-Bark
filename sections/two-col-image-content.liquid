{{ 'two-col-image-content.css' | asset_url | stylesheet_tag }}

<section class="two-col-image-content">
  <div class="two-col-image-content-wrapper section-{{ section.id }}-padding">
         <div class="two-col-image-content-col">
         <div class="two-col-image-content-media">
              <img src="{{ section.settings.image_large | img_url: 'large' }}" alt="{{ product.featured_image.alt }}" />
        </div>
      </div>
      <div class="two-col-image-content-col">
          <div class="two-col-image-content-wrapper-inner">
            <div class="two-col-image-content-text">
              {{ section.settings.text }}
            </div>
             <a
                  {% if section.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ section.settings.button_link }}"
                  {% endif %}
                  class="button button--dark"
               style="margin-top: 25px;"
                >
                  {{ section.settings.bottom_text | escape }}
                </a>
           
          </div>
      </div>
 
  </div>
</section>

{% schema %}
  {
  "name": "Two Col Image Content",
  "class": "section",
  "settings": [
     {
      "type": "image_picker",
      "id": "image_large",
      "label": "Image large"
    },
    {
      "type": "image_picker",
      "id": "image_small",
      "label": "Image Small"
    },
    {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "Content"
        },
     {
          "type": "text",
          "id": "bottom_text",
          "label": "Bottom Content"
        },
     {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.multirow.blocks.row.settings.button_link.label"
        },
       {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
    "presets": [
    {
      "name": "Two Col Image Content"
    }
  ]
}
{% endschema %}

