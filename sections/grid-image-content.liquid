{{ 'grid-image-content.css' | asset_url | stylesheet_tag }}

<section class="grid-image-content">
  <div class="grid-image-content-wrapper page-width">
      <div class="grid-image-content-col col-left">
          <div class="grid-image-content-wrapper-inner">
            <div class="grid-image-content-text">
              {{ section.settings.text }}
            </div>
          </div>
        <div class="grid-image-content-media media-small">
  <img src="{{ section.settings.image_small | img_url: 'large' }}" alt="{{ product.featured_image.alt }}" />

        </div>
      </div>
      <div class="grid-image-content-col">
         <div class="grid-image-content-media">
              <img src="{{ section.settings.image_large | img_url: 'large' }}" alt="{{ product.featured_image.alt }}" />

        </div>
      </div>
  </div>
</section>

{% schema %}

{
  "name": "Grid Image Content",
  "class": "section",
  "settings": [
     {
      "type": "image_picker",
      "id": "image_large",
      "label": "Image large"
    },
    {
      "type": "image_picker",
      "id": "image_small",
      "label": "Image Small"
    },
    {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "Content"
        }
  ],
    "presets": [
    {
      "name": "Grid Image Content"
    }
  ]
}
  
{% endschema %}